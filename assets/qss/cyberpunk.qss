
#TitleBar {
    background-color: #1a0033;
    border-bottom: 2px solid #ff00ff;
}
#TitleBar QLabel {
    font-size: 16px;
    font-weight: bold;
    color: #ff00ff;
}
#TitleBar QPushButton {
    background: transparent;
    color: #ff00ff;
    border: none;
    font-size: 16px;
    padding: 0 8px;
}
#TitleBar QPushButton:hover {
    background-color: rgba(255, 0, 255, 0.2);
}
