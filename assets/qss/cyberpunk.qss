
QWidget {
    background-color: #0f0f0f;
    color: #00fff7;
    font-family: "Consolas";
    font-size: 14px;
}
QPushButton {
    background-color: #00fff7;
    color: #0f0f0f;
    border: 2px solid #ff00ff;
    border-radius: 8px;
    padding: 6px 12px;
}
QPushButton:hover {
    background-color: #ff00ff;
    color: #00fff7;
}
QComboBox {
    background-color: #1a1a1a;
    border: 2px solid #00fff7;
    color: #00fff7;
    padding: 4px;
}
